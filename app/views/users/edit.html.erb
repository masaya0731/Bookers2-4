<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <div id = "error_explanation">
        <% if @user.errors.any? %>
          <% if @user.errors.count == 1 %>
            <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
          <% else %>
            <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
          <% end %>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-grop">
          <label>Name</label><br>
          <%= f.text_field :name, class:"form-control name" %><br>
        </div>
        <div class="form-grop">
          <label>Image</label><br>
          <%= f.attachment_field :profile_image, class:"form-control-file user_image" %><br>
        </div>
        <div class="form-grop">
          <label>Introduction</label><br>
          <%= f.text_area :introduction, class:"form-control introduction" %><br>
        </div>
        <div class="form-grop">
          <%= f.submit "Update User", class:"btn btn-secondary" %><br>
        </div>
      <% end %>
    </div>
  </div>
</div>